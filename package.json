{
  "name": "react-native-media-toolkit",
  "version": "0.1.0",
  "description": "A powerful, flexible, and customizable video player UI toolkit for React Native apps. Inspired by Vidstack, designed for mobile and TV experiences.",
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    }
  },
  "types": "./lib/typescript/commonjs/src/index.d.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.json",
    "!docs",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-media-toolkit-expo-example",
    "example:expo": "yarn workspace react-native-media-toolkit-expo-example",
    "example:bare": "yarn workspace react-native-media-toolkit-bare-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build && npx react-native codegen",
    "release": "release-it --only-version",
    "prettier": "prettier --write ."
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2004durgesh/react-native-media-toolkit.git"
  },
  "author": "Durgesh Kumar Dwivedi <durgeshdwivedi81@gmail.com> (https://github.com/2004durgesh)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/2004durgesh/react-native-media-toolkit/issues"
  },
  "homepage": "https://github.com/2004durgesh/react-native-media-toolkit#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@react-native-community/cli": "latest",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lucide-react-native": "^0.539.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-builder-bob": "^0.31.0",
    "react-native-gesture-handler": "2.24.0",
    "react-native-reanimated": "3.17.4",
    "react-native-svg": "^15.12.1",
    "react-native-video": "6.14.0",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "lucide-react-native": ">=0.539.0",
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=3.0.0",
    "react-native-svg": ">=15.0.0",
    "react-native-video": ">=6.0.0"
  },
  "workspaces": [
    "example/expo",
    "example/bare",
    "docs"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/expo/node_modules",
      "<rootDir>/example/bare/node_modules",
      "<rootDir>/docs/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "infile": "CHANGELOG.md"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "MediaToolkitSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.mediatoolkit"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.52.1"
  },
  "dependencies": {
    "react-native-awesome-slider": "^2.9.0",
    "react-native-orientation-director": "^2.6.1"
  }
}
